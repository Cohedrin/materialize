set -euo pipefail

export MTRLZ_GIT_ROOT="${MTRLZ_GIT_ROOT:-$(git rev-parse --show-toplevel)}"
if [[ "${PWD}" != "${MTRLZ_GIT_ROOT}" ]]; then
    cd "${MTRLZ_GIT_ROOT}"
fi

sigint_handler()
{
    # Stop the composition and remove associated volumes
    echo "Shutting down!"
    ./bin/mzconduct down perf-handbook -v
    trap - INT
}

trap 'sigint_handler' INT
./bin/mzconduct up perf-handbook -w develop
./bin/mzconduct web perf-handbook handbook-develop

# Keep the script running, waiting on CTRL-C from the user
echo "Developer server started! Type CTRL-C to shutdown"
read -r -d '' _ </dev/tty
